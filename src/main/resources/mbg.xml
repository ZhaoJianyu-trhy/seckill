        <!--               enableUpdateByExample="false" enableSelectByExample="false" selectByExampleQueryId="false"></table>-->
        <!--        <table tableName="order_info" domainObjectName="OrderDO" enableCountByExample="false" enableDeleteByExample="false"-->
        <!--               enableUpdateByExample="false" enableSelectByExample="false" selectByExampleQueryId="false"></table>-->
